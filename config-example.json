{
  "webServerPort": 9000,
  "debug": false,
  "stationName": "Your Radio Station",
  "brandColor": "#e6007e",
  "inputs": [
    {
      "type": "dynamic",
      "name": "radio-live",
      "prefix": "ðŸŽµ Now Playing: ",
      "suffix": " ðŸŽµ",
      "settings": {
        "secret": "supersecret123",
        "expiration": {
          "type": "dynamic"
        }
      }
    },
    {
      "type": "dynamic",
      "name": "radio-automation",
      "prefix": "",
      "suffix": "",
      "settings": {
        "secret": "automation-secret",
        "expiration": {
          "type": "fixed",
          "minutes": 5
        }
      }
    },
    {
      "type": "url",
      "name": "nowplaying-api",
      "prefix": "From API: ",
      "suffix": " [Live]",
      "settings": {
        "url": "https://api.example.com/nowplaying",
        "jsonParsing": true,
        "jsonKey": "data.current.title",
        "pollingInterval": 30
      }
    },
    {
      "type": "text",
      "name": "default-text",
      "settings": {
        "text": "Welcome to Your Radio Station!"
      }
    }
  ],
  "outputs": [
    {
      "type": "icecast",
      "name": "main-stream",
      "inputs": ["radio-live", "radio-automation", "nowplaying-api", "default-text"],
      "formatters": ["ucwords", "rds"],
      "settings": {
        "delay": 2,
        "server": "localhost",
        "port": 8000,
        "username": "source",
        "password": "hackme",
        "mountpoint": "/stream"
      }
    },
    {
      "type": "icecast",
      "name": "secondary-stream",
      "inputs": ["radio-live", "default-text"],
      "formatters": ["rds", "uppercase"],
      "settings": {
        "delay": 2,
        "server": "localhost",
        "port": 8000,
        "username": "source",
        "password": "hackme",
        "mountpoint": "/stream2"
      }
    },
    {
      "type": "file",
      "name": "nowplaying-file",
      "inputs": ["radio-live", "radio-automation", "default-text"],
      "formatters": ["uppercase"],
      "settings": {
        "delay": 0,
        "filename": "/tmp/nowplaying.txt"
      }
    },
    {
      "type": "url",
      "name": "webhook-default",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["ucwords"],
      "settings": {
        "delay": 1,
        "url": "https://api.example.com/metadata",
        "method": "POST",
        "bearerToken": "your-bearer-token-here"
      }
    },
    {
      "type": "url",
      "name": "webhook-custom",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["lowercase"],
      "settings": {
        "delay": 0,
        "url": "https://api.example.com/custom-metadata",
        "method": "POST",
        "bearerToken": "your-bearer-token-here",
        "payloadMapping": {
          "station": "Your Radio Station",
          "now_playing": {
            "song": "{{.title}}",
            "artist": "{{.artist}}",
            "full_text": "{{.formatted_metadata}}"
          },
          "metadata": {
            "song_id": "{{.songID}}",
            "duration": "{{.duration}}",
            "timestamp": "{{.updated_at}}",
            "expires": "{{.expires_at}}"
          }
        }
      }
    },
    {
      "type": "url",
      "name": "webhook-get",
      "inputs": ["radio-live", "default-text"],
      "formatters": ["ucwords"],
      "settings": {
        "delay": 1,
        "url": "https://api.example.com/update?title={{.title}}&artist={{.artist}}&updated={{.updated_at}}",
        "method": "GET",
        "bearerToken": "your-bearer-token-here"
      }
    },
    {
      "type": "dlsplus",
      "name": "dlsplus-output",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": [],
      "settings": {
        "delay": 0,
        "filename": "/tmp/dlsplus.txt"
      }
    },
    {
      "type": "websocket",
      "name": "websocket-server",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["ucwords"],
      "settings": {
        "delay": 0,
        "path": "/ws/metadata"
      }
    },
    {
      "type": "websocket",
      "name": "websocket-custom",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["ucwords"],
      "settings": {
        "delay": 0,
        "path": "/ws/custom",
        "payloadMapping": {
          "event": "{{.type}}",
          "station": "Your Radio Station",
          "message": "Now playing: {{.title}} by {{.artist}}",
          "timestamp": "{{.updated_at}}"
        }
      }
    },
    {
      "type": "http",
      "name": "metadata-api",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["ucwords"],
      "settings": {
        "delay": 0,
        "endpoints": [
          {
            "path": "/api/nowplaying.json",
            "responseType": "json"
          },
          {
            "path": "/api/nowplaying.xml",
            "responseType": "xml"
          },
          {
            "path": "/api/current.txt",
            "responseType": "plaintext"
          },
          {
            "path": "/api/nowplaying.yaml",
            "responseType": "yaml"
          },
          {
            "path": "/api/custom.json",
            "responseType": "json",
            "payloadMapping": {
              "station": "Your Radio Station",
              "current_track": {
                "title": "{{.title}}",
                "artist": "{{.artist}}",
                "duration": "{{.duration}}"
              },
              "last_updated": "{{.updated_at}}",
              "status": "live"
            }
          }
        ]
      }
    },
    {
      "type": "stereotool",
      "name": "stereotool-main",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": [],
      "settings": {
        "delay": 2,
        "hostname": "localhost",
        "port": 8080
      }
    }
  ]
}
