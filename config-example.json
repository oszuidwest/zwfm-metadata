{
  "webServerPort": 9000,
  "debug": false,
  "inputs": [
    {
      "type": "dynamic",
      "name": "radio-live",
      "prefix": "ðŸŽµ Now Playing: ",
      "suffix": " ðŸŽµ",
      "settings": {
        "secret": "supersecret123",
        "expiration": {
          "type": "dynamic"
        }
      }
    },
    {
      "type": "url",
      "name": "nowplaying-api",
      "prefix": "From API: ",
      "suffix": " [Live]",
      "settings": {
        "url": "https://api.example.com/nowplaying",
        "jsonParsing": true,
        "jsonKey": "radio.programs.current",
        "pollingInterval": 30
      }
    },
    {
      "type": "text",
      "name": "default-text",
      "settings": {
        "text": "Welcome to ZuidWest FM!"
      }
    }
  ],
  "outputs": [
    {
      "type": "icecast",
      "name": "main-stream",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["ucwords"],
      "settings": {
        "delay": 2,
        "server": "localhost",
        "port": 8000,
        "username": "source",
        "password": "hackme",
        "mountpoint": "/stream"
      }
    },
    {
      "type": "file",
      "name": "nowplaying-file",
      "inputs": ["radio-live", "default-text"],
      "formatters": ["uppercase"],
      "settings": {
        "delay": 0,
        "filename": "/tmp/nowplaying.txt"
      }
    },
    {
      "type": "file",
      "name": "rds-output",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["rds"],
      "settings": {
        "delay": 0,
        "filename": "/tmp/rds.txt"
      }
    },
    {
      "type": "post",
      "name": "full-webhook",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["ucwords"],
      "settings": {
        "delay": 1,
        "url": "https://api.example.com/metadata/full",
        "bearerToken": "your-bearer-token-here"
      }
    },
    {
      "type": "post",
      "name": "custom-api",
      "inputs": ["radio-live", "nowplaying-api", "default-text"],
      "formatters": ["ucwords"],
      "settings": {
        "delay": 0,
        "url": "http://localhost:8080/track",
        "bearerToken": "your_secret_api_key_here",
        "payloadMapping": {
          "item": {
            "title": "title",
            "artist": "artist"
          },
          "expires_at": "expires_at"
        }
      }
    }
  ]
}